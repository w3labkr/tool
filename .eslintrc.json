{
  "env": {
    "es6": true
  },
  "plugins": ["prettier"],
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script",
    "ecmaFeatures": {
      "jsx": false
    }
  },
  "ignorePatterns": ["node_modules/", "dist/", "vendors/"],
  "rules": {
    "prettier/prettier": "error"
  }
}
